# syntax=docker/dockerfile:1

########################
# STAGE 1: BUILD
########################
FROM node:22-alpine AS build

WORKDIR /app

# 1. Solo package.json / lock para aprovechar cache
COPY package*.json ./

# Instalar TODAS las dependencias (incluye devDependencies para compilar TS)
RUN npm ci

# 2. Copiar el resto del código
COPY . .

# 3. Build de TypeScript
RUN npm run build


########################
# STAGE 2: RUNTIME
########################
FROM node:22-alpine AS runtime

WORKDIR /app
ENV NODE_ENV=production
ENV PORT=3000

# 1. Solo deps de producción
COPY package*.json ./
RUN npm ci --omit=dev

# 2. Copiar SOLO el JS compilado (no TS, no tests, etc.)
COPY --from=build /app/dist ./dist

# Si necesitas algún archivo extra (ej. .env.example, config, public, etc.)
# COPY --from=build /app/alguna-carpeta ./alguna-carpeta

EXPOSE 3000

# Tu package.json probablemente tiene "start": "node dist/main.js"
CMD ["npm", "start"]
